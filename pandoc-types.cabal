Build-type:          Simple
Cabal-version:       >=1.6
Source-repository    head
  type:              git
  location:          git://github.com/jgm/pandoc-types.git
Library
  Exposed-modules:   Text.Pandoc.Definition
                     Text.Pandoc.Generic
                     Text.Pandoc.Builder
  if impl(ghc >= 6.10)
    Build-depends:     base >= 4 && < 5, syb, containers >= 0.3
  else
    Build-depends:     base >= 3 && < 4, containers >= 0.3

